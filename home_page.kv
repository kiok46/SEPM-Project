<Home_Page>:
	orientation: "vertical"
	canvas.before:
	    Color:
	        rgba: 1,.498,.196,1
	    Rectangle:
	        size: self.size
	        pos: self.pos
	Status_bar:
		size_hint: 1,.15
		canvas.before:
	        Color:
	            rgba: 1,1,1,1
	        Rectangle:
	            size: self.size
	            pos: self.pos
	    Label:
	    	markup: True
	    	#text: "[b]Hello [color=000000]LNMIIT Schollars[/color][/b]"
	    	font_size: 24
	BoxLayout:
		Image:
			source: "./images/logo1.png"
	BoxLayout:
		size_hint: 1,.5
		Label:
			size_hint: 1,.15
		BoxLayout:
			orientation: "vertical"
			padding: 10
			spacing: 30
			Button:
			    background_color: 1,.3,.1,.2
				text: "Guest"
				on_release: root.parent.parent.current = 'guest_and_author'
			Button:
				text: "Author"
				background_color: 1,.3,.1,.2
				on_release: root.parent.parent.current = 'author_signup'
		Label:
			size_hint: 1,.15

	BoxLayout:
		size_hint: 1,.2
		Button:
			background_color: 1,.3,.1,.2
			text: "Create account!"
	Status_bar:
		size_hint: 1,.15
		canvas.before:
	        Color:
	            rgba: 1,1,1,1
	        Rectangle:
	            size: self.size
	            pos: self.pos
	    Label:
